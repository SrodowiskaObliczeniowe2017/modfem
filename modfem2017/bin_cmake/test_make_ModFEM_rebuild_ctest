for D in ./centos7_*; do
    if [ -d "$D" ]; then
	rm -r "$D"
	mkdir "$D"
        cd "$D"
        echo "--------------------------------------------------------------------------------"
        echo "!!! *** Performing rebuild and ctest in $D *** !!!"
        echo "--------------------------------------------------------------------------------"
        cp ../config.csh .	
        ./config.csh
        make -j8
        ctest -D Experimental
        cd ..
    fi
done

